<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".F_bottom_sheet"
    android:orientation="vertical">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/imageslider"
        android:layout_width="wrap_content"
        android:layout_height="328dp"
        app:iss_auto_cycle="true"
        app:iss_text_align="CENTER"
        app:iss_title_background="@color/green_700"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.ncorti.slidetoact.SlideToActView
            android:layout_marginTop="10dp"
            android:id="@+id/btn_slide_act_detail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:area_margin="4dp"
            app:animation_duration="250"
            app:outer_color="@color/green_600"
            app:inner_color="@color/white"
            app:border_radius="50dp"
            app:text="More About Evo 5"
            app:text_size="20sp"
            app:text_style="bold"
            app:slider_height="80dp"
            app:slider_locked="false"
            app:bounce_on_start="true"
            app:slider_icon="@drawable/baseline_chevron_right_24"
            app:complete_icon="@drawable/baseline_change_circle_24"
            app:icon_margin="6dp"/>

    </LinearLayout>

</LinearLayout>