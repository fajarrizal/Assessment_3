<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Assessment_3" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--Secondary color-->
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondary">@color/green_500</item>

        <item name="android:statusBarColor">@color/green_700</item>

    </style>

    <style name="Theme.Assessment_3" parent="Base.Theme.Assessment_3" />

    <style name="CustomTabText" parent="CustomTabText" tools:ignore="ResourceCycle">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTransparentBottomSheetDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/transparent</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>